<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="365dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <TextView

            android:id="@+id/offper"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"

            android:text="65% off"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="300dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/esiteimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <TextView
                android:id="@+id/offerSrc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@color/tab_1"
                android:gravity="center"
                android:minWidth="70dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_marginTop="5dp"
                android:background="@color/tab_1"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minHeight="20dp"
                android:paddingLeft="10dp"
                android:text="Samsung galaxy 6"
                android:textColor="@android:color/white"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/rel">


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@+id/view"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="M.R.P. 2555555"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:text="Offer price : 2555555"
                android:textSize="12sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_above="@id/opendealbutton"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_line" />

            <Button
                android:id="@+id/opendealbutton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/state_pressed"
                android:elevation="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/opendeal"
                android:textColor="@android:color/white"
                android:textSize="13dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>